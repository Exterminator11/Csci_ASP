<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="#FFE8E1"
                android:startColor="#FFF6F0" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <item>
        <bitmap
            android:antialias="true"
            android:gravity="fill"
            android:src="@drawable/floral_background" />
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <stroke
                android:width="3dp"
                android:color="#40D36D6B" />
        </shape>
    </item>
</layer-list>

